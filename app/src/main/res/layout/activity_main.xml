<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="15dp"
    android:elevation="2dp"
    android:layout_margin="3dp"
    android:background="#eaeded"
    android:orientation="vertical"
    tools:context=".MainActivity"
    >

    <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="From:" android:textStyle="bold" android:textSize="20sp" />
    <Spinner
           android:id="@+id/fromSpinnerId"
           android:layout_width="350dp"
           android:layout_height="70dp"></Spinner>


   <TextView
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:text="amount:" android:textStyle="bold" android:textSize="20sp" />

       <EditText
           android:id="@+id/amountEditTextId"
           android:layout_width="350dp"
           android:layout_height="50dp"
           android:textSize="20sp"
           android:textStyle="bold"
           android:hint="enter any amount"
           android:inputType="numberDecimal"
           android:backgroundTint="#bc2c19"

            />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="to:" android:textStyle="bold" android:textSize="20sp"/>
       <Spinner
           android:id="@+id/toSpinnerId"
           android:layout_width="350dp"
           android:layout_height="70dp"></Spinner>




    <LinearLayout
        android:layout_marginTop="30sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/clearId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="@string/clearButton"
            android:textAllCaps="false"
            android:textSize="25sp"
            android:backgroundTint="#f22"
            />

        <Button
            android:id="@+id/swapId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="@string/swapButton"
            android:textAllCaps="false"
            android:textSize="25sp"
            android:background="#fffb22"
            />

        <Button
            android:id="@+id/converterId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="@string/converterButton"
            android:textAllCaps="false"
            android:textSize="25sp"
            android:background="#4eff22"
            />

    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="result:"
        android:textSize="30sp"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/resultTextViewId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="bold"
        />

</LinearLayout>